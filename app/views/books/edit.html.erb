<h1>Editing Book</h1>

<%= form_with model: @book,url:book_path(@book.id), method: :patch do |f| %>
 <div>
   <label>Title</label>
   <%= f.text_field :title %>
 </div>
 <div>
   <label>Body</label>
   <%= f.text_area :body %>
 </div>
 <div>
   <%= f.submit 'Update Book' %>
 </div>

<% end %>

<span><%= link_to 'Show',book_path(@book.id) %> </span>
<span><%= link_to 'Back',books_path %> </span>