<h1>Editing Book</h1>

<div class="errors">
  <% if @book.errors.any? %>
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li> 
      <% end %> 
    </ul> 
  <% end %> 
</div>

<%= form_with model: @book,url:book_path(@book.id), method: :patch do |f| %>
 <div class="form">
   <label>Title</label>
   <%= f.text_field :title %>
 </div>
 <div class="form">
   <label>Body</label>
   <%= f.text_area :body %>
 </div>
 <div class="form">
   <%= f.submit 'Update Book' %>
 </div>

<% end %>

<span><%= link_to 'Show',book_path(@book.id) %> </span>
<span>|</span>
<span><%= link_to 'Back',books_path %> </span>