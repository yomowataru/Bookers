<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %></td>
    </tr>
  </tbody>
  <% end %>
</table>


<h2>New book</h2>

<%= form_with model: @book do |f| %>
 <div>
   <label>Title</label>
   <%= f.text_field :title %>
 </div>
 <div>
   <label>Body</label>
   <%= f.text_area :body %>
 </div>
 <div>
   <%= f.submit 'Create Book' %>
 </div>

<% end %>